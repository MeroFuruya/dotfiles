{
  // general config
  "window.commandCenter": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.sideBar.location": "right",
  //
  // file associations
  "files.associations": {
    "*.dsk": "ini",
    "*.env.template": "properties",
    "*.yml.template": "yaml",
    "*.dproj": "xml",
    "*.dpr": "objectpascal",
    ".env*": "dotenv"
  },
  //
  // editor
  "editor.fontFamily": "'JetBrainsMono Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.fontWeight": "200",
  "editor.codeLensFontFamily": "Lilex NF",
  "editor.renderWhitespace": "boundary",
  "editor.inlineSuggest.enabled": true,
  "editor.smoothScrolling": true,
  "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
  "editor.gotoLocation.multipleReferences": "gotoAndPeek",
  "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
  "editor.stickyScroll.enabled": true,
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  //
  // editor - theme
  "editor.semanticHighlighting.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": "meta.object-literal.key",
        "settings": {
          "foreground": "#55f0af"
        }
      },
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  //
  // diff editor
  "diffEditor.experimental.useVersion2": true,
  //
  // terminal
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeightBold": "600",
  "terminal.integrated.fontWeight": "100",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.customGlyphs": true,
  "terminal.integrated.enableImages": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-NoLogo"
      ],
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe",
      ],
      "args": [],
      "icon": "terminal-cmd",
    },
    "Git Bash": {
      "source": "Git Bash",
    },
  },
  //
  // zen mode
  "zenMode.centerLayout": false,
  "zenMode.hideTabs": true,
  "zenMode.hideStatusBar": true,
  "zenMode.silentNotifications": true,
  "python.defaultInterpreterPath": "C:\\Program Files\\Python310\\python.exe",
  "git.autofetch": true,
  "git.suggestSmartCommit": false,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  //
  // gitlens
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "push:command",
    "pull:command",
  ],
  "gitlens.defaultDateLocale": null,
  "gitlens.defaultDateShortFormat": null,
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags",
  ],
  "gitlens.graph.scrollMarkers.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
  ],
  //
  // github copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "csharp": false
  },
  //
  // datetime
  "dateTime.use24HourClock": true,
  "dateTime.customFormat": "DD.MM.YYYY HH:mm",
  "dateTime.clipboardFormat": "YYYYMMDD_HHmmss",
  //
  // vscord - discord rich presence
  "vscord.status.idle.enabled": false,
  "vscord.behaviour.suppressNotifications": true,
  //
  // better comments
  "better-comments.highlightPlainText": true,
  "better-comments.multilineComments": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "\/\/",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
    {
      "tag": "debug",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
    },
  ],
